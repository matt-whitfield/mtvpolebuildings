---
import '../styles/global.css';
import NavBar from '../components/navBar.astro';
import Footer from '../components/footer.astro';

interface Props {
	title?: string;
}

const { title = "MTV Pole Buildings" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="format-detection" content="telephone=no" />
		<meta name="robots" content="noindex, noarchive" />
	</head>
	<body>
		<NavBar />
		<main>
			<slot />
		</main>
		<Footer/>
	</body>
</html>
<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	:global(.gradient-section-1) {
		background-image: linear-gradient(to bottom right, #f8fafc, #e2e8f0);
	}

	:global(.gradient-section-2) {
		background-image: linear-gradient(to bottom right, #fff, #f1f5f9);
	}

	:global(.section-padding) {
		padding: 4rem 0;
	}
</style>
