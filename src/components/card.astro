---
// Define the props interface for the Card component
interface Props {
  icon: string; // Icon path or name
  heading: string; // Card heading text
  subheading: string; // Card subheading text
  bgColor?: string; // Optional background color, with default in the component
}

// Destructure the props with defaults where appropriate
const { icon, heading, subheading, bgColor = 'bg-white' } = Astro.props;
---

<div class={`card ${bgColor} p-6 rounded-lg shadow-md transition-transform hover:shadow-lg hover:-translate-y-1`}>
  <div class="icon-container mb-4">
    <img src={icon} alt="" class="w-12 h-12" />
  </div>
  <h3 class="text-xl font-bold mb-2">{heading}</h3>
  <p class="text-gray-600">{subheading}</p>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 350px;
  }
</style>